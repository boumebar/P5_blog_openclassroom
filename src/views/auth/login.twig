{% extends "layouts/layout.twig" %}

{% block head  %}
	<title>Login</title>
{% endblock %}

{% block image %}
	style="background-image:url({{ constant('SCRIPT') ~ '/assets/img/connexion.jpg'}}) "
{% endblock %}

{% block title %}
	<h1>Se connecter</h1>
{% endblock %}


{% block content %}
	{% if _get.success %}
		<div class="alert alert-success">
			Vous Ãªtes bien inscrit , veuillez vous connecter
		</div>
	{% endif %}
	{% if _session.message %}
		<div class="alert alert-danger">
			<ul>
				{% for erreur in _session.message.erreur %}
					<li>
						{{ erreur }}
					</li>
				{% endfor %}
			</ul>
		</div>
	{% endif %}

	<form method="post" action="{{constant('ROOT')}}/login" id="contactForm" class="form-block needs-validation mb-5" novalidate>
		<div class="form-group mb-4">
			<label for="email">Email</label>
			<input name="email" type="email" value="{{post.email}}" class="form-control" id="email" required>
			<div class="invalid-feedback" data-sb-feedback="email:email">Veuillez entrer un email valide</div>
		</div>
		<div class="form-group">
			<label for="password">Mot de passe</label>
			<input name="password" type="password" class="form-control" id="password" required>
			<div class="invalid-feedback" data-sb-feedback="password:required">Veuillez entrer votre mot de passe</div>
		</div>
		<br>
		<div id="success"></div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Connexion</button>
			<a href="{{constant('ROOT')}}/register" class="btn btn-primary">S'inscrire</a>
		</div>
	</form>
{% endblock %}
