{% extends "layouts/layout.twig" %}

{% block head  %}
	<title>Login</title>
{% endblock %}

{% block image %}
	style="background-image:url({{ constant('SCRIPT') ~ '/assets/img/connexion.jpg'}}) "
{% endblock %}

{% block title %}
	<h1>Se connecter</h1>
{% endblock %}


{% block content %}
	{% if _get.success %}
		<div class="alert alert-success">
			Vous Ãªtes bien inscrit , veuillez vous connecter
		</div>
	{% endif %}
	{% if _session.erreur %}
		<div class="alert alert-danger">
			<ul>
				{% for erreur in _session.erreur %}
					<li>
						{{ erreur }}
					</li>
				{% endfor %}
			</ul>
		</div>
	{% endif %}

	<form method="post" action="{{constant('ROOT')}}/login" id="contactForm" class="mb-5" novalidate>
		<div class="control-group">
			<div class="form-group floating-label-form-group controls">
				<label for="email">Email</label>
				<input name="email" type="email" value="{{post.email}}" class="form-control" id="email" required data-validation-required-message="Veuillez renseigner ce champ.">
				<p class="help-block text-danger"></p>
			</div>
		</div>

		<div class="control-group">
			<div class="form-group floating-label-form-group controls">
				<label for="password">Mot de passe</label>
				<input name="password" type="password" class="form-control" id="password" required data-validation-required-message="Veuillez renseigner ce champ.">
				<p class="help-block text-danger"></p>
			</div>
		</div>
		<br>
		<div id="success"></div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Connexion</button>
			<a href="{{constant('ROOT')}}/register" class="btn btn-primary">S'inscrire</a>
		</div>
	</form>
{% endblock %}
