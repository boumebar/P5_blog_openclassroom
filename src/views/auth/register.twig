{% extends "layouts/layout.twig" %}

{% block head  %}
	<title>Inscription</title>
{% endblock %}

{% block image %}
	style="background-image:url({{ constant('SCRIPT') ~ '/assets/img/administration2.jpg'}}) "
{% endblock %}

{% block title %}
	<h1>Inscription</h1>
{% endblock %}

{% block content %}
	<p>Inscrivez-vous pour pouvoir commenter les articles du blog.</p>

	<div class="col-sm-auto col-md-5 col-xl-3 mt-4 mb-5">
		<form method="post" action="">
			<div class="mb-3">
				<label for="username" class="form-label">Nom</label>
				<input type="text" class="form-control" name="username" minlength="3" aria-describedby="usernameDesc" required/>
				<div id="usernameDesc" class="form-text">
					3 caractères minimum.
				</div>
			</div>
			<div class="mb-3">
				<label for="email" class="form-label">E-mail</label>
				<input type="email" class="form-control" name="email" required/>
			</div>
			<div class="mb-3">
				<label for="password" class="form-label">Mot de passe</label>
				<input type="password" class="form-control" name="password" minlength="8" aria-describedby="passwordDesc" required/>
				<div id="passwordDesc" class="form-text">
					8 caractères minimum.
				</div>
			</div>
			<button type="submit" class="btn btn-primary">S'inscrire</button>
		</form>
	</div>
{% endblock %}
