{% extends "layouts/layout.twig" %}

{% block head  %}
	<title>Les articles</title>
{% endblock %}

{% block image %}
	style="background-image:url({{ constant('SCRIPT') ~ '/assets/img/home-bg.jpg'}}) "
{% endblock %}

{% block title %}
	<h1>Les Articles</h1>
{% endblock %}

{% block content %}
	{% if _get.success %}
		<div class="alert alert-success">
			Vous etes connect√©
		</div>
	{% endif %}
	<div class="row">
		{% for post in posts %}
			<div class="col-sm-6 col-lg-3">
				<div class="card mb-3">
					<div class="card-body">
						<h5 class="card-title">{{ post.getTitle }}</h5>
						<small class="text-muted">
							{{ post.getCreatedAt}}</small>
						<p>{{ post.getChapo}}</p>
						<p>
							<a href="{{constant('ROOT')}}/post/{{ post.getId }}" class="btn btn-primary d-flex justify-content-center">Voir plus</a>
						</p>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
